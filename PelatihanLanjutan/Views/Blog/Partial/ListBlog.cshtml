@model BlogDashBoard

<h1>Data Blog</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Judul
            </th>
            <th>
                Tanggal
            </th>
            <th>
                Status
            </th>
            <th>
                Penulis
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.blog)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.CreateDate
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @item.User.Username
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="trash" title="Keluar" style="color:red"
                       onclick="if (!confirm('Yakin akan menghapus kenangan ini?')) { return false; }">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
